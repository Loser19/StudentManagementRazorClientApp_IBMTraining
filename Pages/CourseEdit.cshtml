@page "{id:int}"
@model WebAppRazorCourseClient.Pages.CourseEditModel
@{
    ViewData["Title"] = "Edit Course";
}

<h1>Edit Course</h1>

<form method="post">
    <input type="hidden" asp-for="EditCourse.CourseId" />

    <div class="form-group">
        <label asp-for="EditCourse.Title">Title</label>
        <input asp-for="EditCourse.Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EditCourse.Credits">Credits</label>
        <input asp-for="EditCourse.Credits" class="form-control" type="number" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save</button>
</form>
