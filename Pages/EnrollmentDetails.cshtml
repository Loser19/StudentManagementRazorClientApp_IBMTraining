@page "{id:int}"
@model StudentManagementRazorClientApp.Pages.Enrollment.EnrollmentDetailsModel
@{
    ViewData["Title"] = "Enrollment Details";
}
<h1>Enrollment Details</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Student: @Model.Enrollment.Student?.Name</h5>
        <p class="card-text">Course: @Model.Enrollment.Course?.Title</p>
        <p class="card-text">Enrolled On: @Model.Enrollment.EnrollmentDate.ToString("yyyy-MM-dd")</p>
        <a asp-page="/EnrollmentList" class="btn btn-secondary">Back to List</a>
    </div>
</div>
