@page "{id:int}"
@model StudentManagementRazorClientApp.Pages.Enrollment.EnrollmentEditModel
@{
    ViewData["Title"] = "Edit Enrollment";
}

<h1>Edit Enrollment</h1>

<form method="post">
    <input type="hidden" asp-for="EditEnrollment.EnrollmentId" />

    <div class="form-group">
        <label asp-for="EditEnrollment.StudentId">Student</label>
        <select asp-for="EditEnrollment.StudentId" asp-items="Model.StudentOptions" class="form-control"></select>
        <span asp-validation-for="EditEnrollment.StudentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EditEnrollment.CourseId">Course</label>
        <select asp-for="EditEnrollment.CourseId" asp-items="Model.CourseOptions" class="form-control"></select>
        <span asp-validation-for="EditEnrollment.CourseId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EditEnrollment.EnrollmentDate">Enrollment Date</label>
        <input asp-for="EditEnrollment.EnrollmentDate" type="date" class="form-control" />
        <span asp-validation-for="EditEnrollment.EnrollmentDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
    <a asp-page="/EnrollmentList" class="btn btn-secondary mt-3">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
