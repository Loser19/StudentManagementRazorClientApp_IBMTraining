@page
@model WebAppRazorStudentClient.Pages.StudentCreateModel
@{
    ViewData["Title"] = "Create Student";
}

<h1>Create a New Student</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="NewStudent.Name">Name</label>
        <input asp-for="NewStudent.Name" class="form-control" />
        <span asp-validation-for="NewStudent.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewStudent.Age">Age</label>
        <input asp-for="NewStudent.Age" class="form-control" type="number" />
        <span asp-validation-for="NewStudent.Age" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
